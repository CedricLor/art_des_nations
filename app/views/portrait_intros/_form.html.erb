<% content_for(:title, t(:portraits, default: "Portraits")) %>
<% content_for :body_class, "portraits" %>

<%= simple_form_for(@portrait_intro) do |f| %>
  <%= f.error_notification %>

  <% portrait_intro_content = f.cktext_area :intro, rows: 50  %>
  <% submit_button = render('shared/aktion_article_portrait_site_edito_static/submit_button', f: f) %>

  <%= render partial: 'shared/categories_portraits/list',
      locals: {
        parameters: {
          list_name: t(:portraits, default: "Portraits"),
          list_editorial: portrait_intro_content,
          list_items: @portraits,
          submit_button: submit_button
        }
      }
  %>

<% end %>
