<% content_for :title, t(:categories_admin_index_title, default: "Categories admin index") %>

<% provide :admin_nav_content_type do %>
  <% "#{@categories.first.class.name.pluralize}" %>
<% end %>

<% provide :admin_nav_content_actions do %>
  <li><%= link_to t(:admin_nav_new_content, default: 'New'), new_category_path %></li>
<% end %>

<% render 'shared/admin_nav_content' %>


<div class="container">
  <h1>Listing Categories</h1>

  <%= link_to 'New Category', new_category_path %>

  <table class="table table-striped">
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Country</th>
      <th>Action date</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @acategories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
      <td><%= category.articles.count %></td>
      <td><%= category.aktions.count %></td>
      <td><%= category.portraits.count %></td>
      <td><%= link_to 'Show', aktion %></td>
      <td><%= link_to 'Edit', edit_aktion_path(aktion) %></td>
      <td><%= link_to 'Destroy', aktion, method: :delete, data: { confirm: t(:deletion_confirmation, this_item: @this_item_i18n_name, default: "Are you sure you want to delete #{@this_item_i18n_name}?") } %></td>
    </tr>
  <% end %>
  </table>
</div>
