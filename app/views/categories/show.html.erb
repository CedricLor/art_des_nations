<% content_for(:title, raw("#{@category.name}")) %>
<% content_for :body_class, "portraits" %>

<% render partial: 'shared/admin_nav_translation_menu_wrapper' %>

<% provide :admin_nav_content_actions do %>
  <li><%= link_to t(:admin_nav_new_content, default: 'New'), new_category_path %></li>
  <li><%= link_to t(:admin_nav_edit_content, default: 'Edit'), edit_category_path(@category) %></li>
  <li><%= link_to t(:admin_nav_admin_index_content, default: 'Index'), categories_path %></li>
<% end %>

<%= render partial: 'shared/categories_portraits/list', locals: {
    parameters: {
      list_name: @category.name,
      list_editorial: @category.editorial || '',
      list_items: @categorized_articles_and_aktions
    }
  }
%>
