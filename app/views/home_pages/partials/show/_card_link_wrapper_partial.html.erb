<%# _card_link_wrapper_partial.html.erb %>
<%# called from:
- home_pages/partials/show/_article_recommandation.html.erb
- home_pages/partials/show/_portrait_recommandation.html.erb
- home_pages/partials/show/_diaporama_actions.html.erb
%>

<%= link_to polymorphic_path(item) do %>
  <% if (picturizing = item.picturizings.size > 0 && item.picturizings.select { |p| p.for_card == "true" }) && picturizing.size > 0 %>
    <div class="img-wrapper">
      <%= image_tag(picturizing[0].media_container.media(:for_card), alt: picturizing[0].media_container.title) %>
      <div class="layer"></div>
    </div>
  <% end %>
  <h3>
    <%= item.title %>
  </h3>
<% end %>
