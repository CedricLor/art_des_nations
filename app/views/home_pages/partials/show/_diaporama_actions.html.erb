<%# home_pages/partials/show/_diaporama_actions.html.erb %>
<%# called from:
- home_pages/partials/shared/_main_content.html.erb
%>

<div class="flexslider" id="slide-actions">
  <ul class="slides" style="margin-left: 0px;">

    <% aktions.each do | aktion | %>
      <li class="slide">
        <p class="categorie">
          <%= link_to aktion.country.name, country_path(aktion.country) %> /
          <%= link_to aktion.categorizings[0].category.name, category_path(aktion.categorizings[0].category) %>
        </p>

        <%= render partial: 'shared/recommandation_inner',
            locals: {
              element: aktion,
              subpartial: 'home_pages/partials/show/img_safe_for_card_layout'
            }
        %>

      </li>
    <% end %>

  </ul>
</div>
