<%# media_containers/_create_form.html.erb %>

<%= simple_form_for parent_item, html: {multipart: true} do |f| %>

  <% parent_item.picturizings.each_with_index do |p, index| %>
    <%= render 'shared/aktion_article_portrait/upload_field',
        file_field_name: "media_containers[#{index}][file]",
        file_field_id: "media_containers_#{index}"
    %>
  <% end %>

  <% submit_button = f.button :submit, t(:save_your_changes, default: 'Save your changes!!!'), class: 'my-submit-button btn btn-primary btn-lg btn-block' %>

  <%= render 'shared/general_content_row', content: submit_button %>

<% end %>
