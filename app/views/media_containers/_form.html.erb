<%# media_containers/_form.html.erb %>


<%= simple_form_for @media_container, html: {multipart: true} do |f| %>

  <%= render partial: 'shared/aktion_article_portrait/additional_picture_form.html.erb',
      locals: {
        file_field_name: "media_container[media]",
        file_field_id: "media_container_media",
        title_field_name: "media_container[title]",
        title_field_id: "media_container_title",
        title_value: title_value
      }
  %>

  <%= render partial: 'media_containers/partials/additional_media_container_fields',
      locals: {
        source_url_field_name: 'media_container[source_url]',
        source_url_value: source_url_value,
        placeholder_for_picture_source_url: t(:placeholder_for_picture_source_url, default: "You may enter the source url of your new picture here"),
        creation_date_field_name: 'media_container[creation_date]',
        creation_date_value: creation_date_field_value,
        placeholder_for_picture_creation_date: t(:placeholder_for_picture_creation_date, default: "You may enter the date of your new photograp or painting here"),
        author_field_name: 'media_container[author]',
        author_field_name_value: author_field_name_value,
        placeholder_for_picture_author_name: t(:placeholder_for_picture_author_name, default: "You may enter the name of the photograph or painter here")
      }
  %>

  <% submit_button = f.button :submit, t(:save_your_changes, default: 'Save your changes!!!'), class: 'my-submit-button btn btn-primary btn-lg btn-block' %>

  <%= render partial: 'shared/general_content_row',
      locals: {
        content: submit_button
      }
  %>

<% end %>
