<%# site_editorials/partials/_container.html.erb %>
<%# called from:
- site_editorials/show.html.erb
- site_editorials/_form.html.erb
%>

<%= render partial: 'site_editorials/partials/title',
    locals: {
      title: parameters[:title]
    },
    layout: 'shared/article_aktion_static/body_layout'
%>

<%= render partial: 'shared/aktion_static/body', locals: {
      body: parameters[:editorial]
    },
    layout: 'shared/article_aktion_static/body_layout'
%>

<%# if parameters > 2, the partial is being called from the edit or the new site_editorial_controller actions
Remaining parameters are (in this order -- important!!!):
- status
- the submit button
%>
<% if parameters.size > 2 %>
  <%= render partial: 'shared/article_aktion/additional_form_fields',
    locals: {
      remaining_params: parameters.
        select { |key, value| key === :submit_button || key == :status }.
        values
    }
  %>
<% end %>


