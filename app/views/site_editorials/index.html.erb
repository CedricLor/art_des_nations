<% content_for :title, t(:site_editorial_admin_index_title, default: "Editorials admin index") %>

<% provide :admin_nav_content_type do %>
  <% "#{@site_editorials.first.class.name.pluralize}" %>
<% end %>

<% provide :admin_nav_content_actions do %>
  <li><%= link_to t(:admin_nav_new_content, default: 'New'), new_site_editorial_path %></li>
<% end %>

<% render 'shared/admin_nav_content' %>


<h1>Listing Site Editorials</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_editorials.each do |site_editorial| %>
      <tr>
        <td><%= link_to 'Show', site_editorial %></td>
        <td><%= link_to 'Edit', edit_site_editorial_path(site_editorial) %></td>
        <td><%= link_to 'Destroy', site_editorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site editorial', new_site_editorial_path %>
