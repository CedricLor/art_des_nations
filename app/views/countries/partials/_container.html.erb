<%# countries/partials/_container.html.erb %>
<%# called from:
- countries/_form.html.erb
- countries/show.html.erb
%>

<%= render partial: 'countries/partials/title',
    locals: {
      title: parameters[:title]
    }
%>

<%= render partial: 'countries/partials/main_content',
    locals: {
      editorial: parameters[:editorial]
    }
%>

<%# if parameters > 2, the partial is being called from the edit or the new countries_controller actions
Remaining parameters are (in this order -- important!!!):
- the submit button
%>
<% if parameters.size > 2 %>
  <%= render partial: 'shared/aktion_static/body',
      layout: 'shared/article_aktion_static/content_row_layout',
      locals: {
        body: parameters[:submit_button]
      }
  %>
<% end %>


