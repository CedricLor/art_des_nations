<%# _main_content.html.erb %>
<%# called from countries/partials/_container.html.erb %>

<div class="row contenu-principal">

  <!-- editorial -->
  <div class="col-xs-12 col-sm-7">
    <%= editorial.html_safe %>
  </div>

  <div class="col-xs-12 col-sm-5">

    <!-- aktion list -->
    <div id="recommandations">

      <%= render partial: 'shared/recommandations_iterator',
        locals: {
          collection: @aktions,
          additional_class_names: '',
          sub_partial: 'shared/category_country_portrait/recommandation'
        }
      %>

    </div>

    <!-- external links -->
    <%= yield :external_links %>

  </div>
</div>
