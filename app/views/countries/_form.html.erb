<%= simple_form_for(@country) do |f| %>
  <%= f.error_notification %>

  <!-- div class="form-inputs"-->
    <% title = f.input :title %>
    <% editorial = f.cktext_area :editorial, rows: 50, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini', language: I18n.locale} %>
  <!-- /div-->

  <!--div class="form-actions" -->
    <% submit_button = f.button :submit, 'Save your changes!!!', class: 'my-submit-button btn btn-primary btn-lg btn-block' %>
  <!-- /div -->


  <%# render the partial with the variables passed in an array %>
  <%= render partial: 'countries/partials/container',
      object: @country,
      locals: {
        parameters: [
          title,
          editorial,
          submit_button
        ]
      }
  %>


<% end %>
