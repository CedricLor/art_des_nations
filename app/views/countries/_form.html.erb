<%= simple_form_for(@country) do |f| %>
  <%= f.error_notification %>

  <% title = f.input :title, label: false %>
  <% editorial = f.cktext_area :editorial, rows: 50  %>

  <% submit_button = render('shared/aktion_article_portrait_site_edito_static/submit_button', f: f) %>

  <%# render the partial with the variables passed in an array %>
  <%= render partial: 'countries/partials/container',
      object: @country,
      locals: {
        parameters: {
          title: title,
          editorial: editorial,
          submit_button: submit_button
        }
      }
  %>

<% end %>
