<%# aktions/partials/_container.html.erb %>
<%# called from:
- view aktions/show.html.erb
- view aktions/edit.html.erb
- to come: view aktions/new.html.erb
%>

<%= render partial: 'shared/article_aktion_static/title_teaser',
    layout: 'shared/article_aktion_static/title_teaser_error_layout',
    locals: {
      title: parameters[:title],
      teaser: parameters[:teaser]
    }
%>

<%= yield :pictures %>

<%= yield :additional_pictures_form %>

<%= render partial: 'shared/aktion_static/body', locals: {
  body: parameters[:body]
  # body: item.body
  },
  layout: 'shared/article_aktion_static/body_layout'
%>

<%= yield :country %>

<%= yield :categories_form %>

<%# if parameters > 3, the partial is being called from the edit or the new aktions_controller actions
Remaining parameters are
- status
- aktion_date
- posted_at
- the submit button
%>

<% if parameters.size > 3 %>
  <%= render partial: 'shared/article_aktion/additional_form_fields',
    locals: {
      remaining_params: parameters.select { |key, value| key === :status || key === :submit_button || key === :aktion_date || key === :posted_at }.values
      # remaining_params: parameters - parameters[0..3]
    }
  %>
<% end %>

