<%# aktions/partials/_container.html.erb %>
<%# called from:
- view aktions/show.html.erb
- view aktions/edit.html.erb
- to come: view aktions/new.html.erb
%>

<% error_notifications = render partial: 'shared/article_aktion_static/error_notification' %>
<%= render partial: 'shared/general_content_row',
    locals: { content: error_notifications } %>

<% title_teaser = render partial: 'shared/article_aktion_static/title_teaser',
    locals: {
      title: parameters[:title],
      teaser: parameters[:teaser]
    } %>
<%= render partial: 'shared/general_content_row',
    locals: { content: title_teaser } %>


<%= yield :pictures %>

<%= yield :additional_pictures_form %>

<%= render partial: 'shared/aktion_static/body',
    layout: 'shared/article_aktion_static/body_layout',
    locals: {
      body: parameters[:body]
    }
%>

<%= yield :aktion_date_fields %>

<%= yield :country %>

<%= yield :categories_form %>

<%= yield :status_selector %>

<%= yield :submit_button %>
