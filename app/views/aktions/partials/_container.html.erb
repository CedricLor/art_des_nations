<%# aktions/partials/_container.html.erb %>
<%# called from:
- view aktions/show.html.erb
- view aktions/edit.html.erb
- to come: view aktions/new.html.erb
%>

<%= render partial: 'shared/article_aktion_static/title_teaser', locals: {
  title: parameters[:title],
  teaser: parameters[:teaser]
  # title: item.title,
  # teaser: item.teaser
  }
%>

<%= yield :pictures %>

<%= render partial: 'shared/aktion_static/body', locals: {
  body: parameters[:body]
  # body: item.body
  },
  layout: 'shared/article_aktion_static/body_layout'
%>

<%# if parameters > 4, the partial is being called from the edit or the new aktions_controller actions
Remaining parameters are (in this order -- important!!!):
- status
- aktion_date
- posted_at
- the submit button
%>
<% if parameters.size > 4 %>
  <%= render partial: 'shared/article_aktion/additional_form_fields',
    locals: {
      remaining_params: parameters - parameters[0..3]
    }
  %>
<% end %>

