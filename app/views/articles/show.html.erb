<%# view: articles/show.html.erb %>
<%# rendered in layout/articles.html.erb %>

<% provide :admin_nav_content_type do %>
  <% "#{@article.class.name}" %>
<% end %>

<% provide :admin_nav_content_actions do %>
  <li><%= link_to t(:admin_nav_delete_content, default: 'Delete'), article_path, method: :delete, data: { confirm: t(:deletion_confirmation, this_item: @this_item_i18n_name, default: "Are you sure you want to delete #{@this_item_i18n_name}?") } %></li>
  <li><%= link_to t(:admin_nav_new_content, default: 'New'), new_article_path %></li>
  <li><%= link_to t(:admin_nav_edit_content, default: 'Edit'), edit_article_path(@article) %></li>
  <li><%= link_to t(:admin_nav_admin_index_content, default: 'Index'), articles_path %></li>
<% end %>

<% render 'shared/admin_nav_content' %>


<% provide :pictures do %>
  <%= render partial: 'shared/article_aktion/galerie_photos',
      locals: {
        parent: @article,
        pictures: @media_containers,
        sub_partial: 'shared/article_aktion/slide_wrapper',
        class_name_for_slider: 'slides'
      }
  %>
<% end %>

<% provide :author_full_name do %>
  <%= @article.author.full_name %>
<% end %>


<%= render partial: 'articles/partials/container',
    layout: "shared/article_aktion_static/container_layout",
    locals: {
      parameters: {
        title: @article.title,
        teaser: @article.teaser  || '',
        body: @article.body,
        posted_from_location: @article.posted_from_location,
        posted_at: @article.posted_at
      }
    }
%>
