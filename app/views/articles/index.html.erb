<%= link_to t('.new_article'), new_article_path %>

<%#= react_component('NewsIndexPage', { articles: @articles } ) %>

<% @articles.each do |article| %>
  <h3><%= article.title.html_safe %></h3>
  <%#= image_tag article.picture.url(:medium) %>
  <p><%= article.teaser.nil? ? "" : article.teaser.html_safe %></p>
  <p><%= article.body.html_safe %></p>
  <%= link_to t('.edit_article'), edit_article_path(article) %>
  <% if article != @articles.last %>
    <hr />
  <% end %>
<% end %>

