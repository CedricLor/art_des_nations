<%# articles/partials/_container.html.erb %>
<%# called from:
- articles/show.html.erb
- articles/_form.html.erb
%>

<% error_notifications = render partial: 'shared/aktion_article_static/error_notification' %>
<%= render partial: 'shared/general_content_row',
    locals: { content: error_notifications } %>

<% title_teaser = render partial: 'shared/aktion_article_static/title_teaser',
    locals: {
      title: parameters[:title],
      teaser: parameters[:teaser]
    } %>
<%= render partial: 'shared/general_content_row',
    locals: { content: title_teaser } %>

<%= yield :pictures %>

<%= yield :additional_pictures_form %>

<%= render partial: 'articles/partials/body',
    object: @article,
    locals: {
      body_content: parameters[:body],
      posted_from_location: parameters[:posted_from_location],
      posted_at: parameters[:posted_at]
    },
    layout: 'shared/aktion_article_static/body_layout'
%>

<%= yield :categories_form %>

<%= yield :status_selector %>

<%= yield :submit_button %>

<%= yield :existing_external_linkings %>

<%= yield :linkables %>
