<%# portraits/show.html.erb %>

<% content_for :title, raw(@portrait.title) %>
<% content_for :body_class, "portraits" %>

<%= render partial: 'portraits/partials/single_views',
  locals: {
    parameters: [
      @portrait.title,
      @portrait.teaser.html_safe,
      image_tag(@portrait.media_containers.first.media, alt: ""),
      @portrait.body.html_safe
    ]
  }
%>


<%= link_to 'Edit', edit_portrait_path(@portrait) %>
