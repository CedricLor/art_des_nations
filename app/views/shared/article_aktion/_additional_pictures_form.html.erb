<%# shared/article_aktion/_additional_pictures_form.html.erb %>
<%# called from:
- articles/_form.html.erb
- aktions/_form.html.erb
%>

<% parent.new_md.each do |i, value| %>

  <%= render partial: 'shared/aktion_article_portrait/additional_picture_form.html.erb',
      locals: {
        file_field_name: "#{item}[new_md][#{i}][file]",
        file_field_id: "#{item}_new_md_#{i}_file",
        title_field_name: "#{item}[new_md][#{i}][title]",
        title_field_id: "#{item}_new_md_#{i}_title",
        title_value: value["title"]
      }
  %>

  <% render 'shared/article_aktion/additional_picture_form_management_fields',
      parent: parent,
      item: item,
      i: i,
      value: value
  %>

  <hr>
<% end %>
