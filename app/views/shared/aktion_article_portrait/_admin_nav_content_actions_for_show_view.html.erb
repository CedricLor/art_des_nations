<%# _admin_nav_content_actions_for_show_view.html.erb %>
<%# called from:
- aktions/show.html.erb
- articles/show.html.erb
- portraits/show.html.erb
%>

<% provide :admin_nav_content_actions do %>
  <li><%= link_to t(:admin_nav_delete_content, default: 'Delete'), polymorphic_url(@item, routing_type: :path), method: :delete, data: { confirm: t(:deletion_confirmation, this_item: @this_item_i18n_name, default: "Are you sure you want to delete #{@this_item_i18n_name}?") } %></li>
  <li><%= link_to t(:admin_nav_new_content, default: 'New'), polymorphic_url(@item.class.new, action: :new, routing_type: :path) %></li>
  <li><%= link_to t(:admin_nav_edit_content, default: 'Edit'), polymorphic_url(@item, action: :edit, routing_type: :path) %></li>
  <li><%= link_to t(:admin_nav_manage_links, default: 'Manage links'), linkings_for_path(@item.class.name, @item.id) %></li>
  <li><%= link_to t(:admin_nav_admin_index_content, default: 'Index'), polymorphic_path(@item.class.new) %></li>
<% end %>

