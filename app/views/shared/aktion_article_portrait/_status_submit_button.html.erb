<%# shared/aktion_article_portrait/_status_submit_button.html.erb %>

<% provide :status_selector do %>
  <% status_selector = f.input :status,
    collection: [
      [t(:draft, default: "draft"), "draft"],
      [t(:published, default: "published"), "published"],
      [t(:featured, default: "featured"), "featured"],
      [t(:archived, default: "archived"), "archived"]
    ],
    as: :radio_buttons,
    selected: "draft",
    label: t(:label_for_status_selector,
      this_item: @this_item_i18n_name,
      default: "Please select a status for #{@this_item_i18n_name}"
    ),
    hint: t(:hint_for_status_selector,
      the_item: @the_item_i18n_name,
      draft: t(:archived, default: "draft"),
      archived: t(:archived, default: "archived"),
      default: "If you select #{t(:draft, default: "draft")} or #{t(:archived, default: "archived")}, #{@the_item_i18n_name} will not be published on the website"
    ),
    error: t(:status_missing_error,
      an_item: @an_item_i18n_name,
      default: "Assigning a status to #{@an_item_i18n_name} is mandatory, please specify one"
    )
  %>
  <%= render partial: 'shared/aktion_article_portrait/additional_form_field',
      locals: {
        additional_class_name: "my-inline-status-radios",
        additional_form_field: status_selector
      }
  %>
<% end %>


<% provide :submit_button do %>
  <% submit_button = f.button :submit, t(:save_your_changes, default: 'Save your changes!!!'), class: 'my-submit-button btn btn-primary btn-lg btn-block' %>
  <%= render partial: 'shared/aktion_article_portrait/additional_form_field',
      locals: {
        additional_class_name: "",
        additional_form_field: submit_button
      }
  %>
<% end %>
