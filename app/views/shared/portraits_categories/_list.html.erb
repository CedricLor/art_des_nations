<%# shared/portraits_categories/_list.html.erb %>
<%# called from:
- portraits/index.html.erb
- categories/show.html.erb
- categories/_form.html.erb
%>

<div class="page-content">
  <div class="container">

    <!-- Collection metadata -->
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-lg-8 col-lg-offset-2">
        <!-- List name (Portraits ou nom de la catÃ©gorie) -->
        <h1>
          <%= parameters[:list_name] %>
        </h1>
        <!-- Intro (intro for portraits or categorie teaser) -->
        <h2 class="resume">
          <%= parameters[:list_editorial] %>
          <!-- submit button in case the partials is called from a form -->
          <% if parameters.size > 3 %>
            <div>
              <%= parameters[:submit_button] %>
            </div>
          <% end %>
        </h2>
      </div>
    </div>

    <!-- List -->
    <div class="row">

      <%= render partial: 'shared/recommandations', locals: {
        list: parameters[:list_items],
        additional_class_names: "col-xs-12 col-sm-4 "
        }
      %>

    </div><!-- ./row -->

    <!-- Pagination -->
    <div class="row">
      <div class="col-xs-12 text-center">
        <nav>
          <ul class="pagination">
            <li>
              <a href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li>
              <a href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>

  </div>
</div>
