<%# _admin_nav_content_actions_for_edit_view.html.erb %>
<%# called from:
- aktions/edit.html.erb
- articles/edit.html.erb
- portraits/edit.html.erb
%>

<% provide :admin_nav_content_actions do %>
  <li><%= link_to t(:admin_nav_delete_content, default: 'Delete'), polymorphic_url(item, routing_type: :path), method: :delete, data: { confirm: t(:deletion_confirmation, this_item: @this_item_i18n_name, default: "Are you sure you want to delete #{@this_item_i18n_name}?") } %></li>
  <li><%= link_to t(:admin_nav_new_content, default: 'New'), polymorphic_url(item.class, action: :new, routing_type: :path) %></li>
  <li><%= link_to t(:admin_nav_show_content, default: 'Show'), polymorphic_url(item) %></li>
  <li><%= link_to t(:admin_nav_manage_links, default: 'Manage links'), linkings_for_path(item.class.name, item.id) %></li>
  <li><%= link_to t(:admin_nav_admin_index_content, default: 'Index'), polymorphic_path(item.class) %></li>
<% end %>


<% render 'shared/admin_nav_content' %>

