<%# shared/country_home_page/_external_links_fields.html.erb %>
<%# called from:
- shared/country_home_page/_external_links_form.html.erb
- country/_form.html.erb
%>

  <% provide :additional_external_links do %>
    <% 3.times do |i| %>
      <%= render partial: 'shared/country_home_page/editable_external_link', locals: {
          index: "new_external_links][#{i}",
          name: '',
          url: ''
        }
      %>
    <% end %>
  <% end %>

  <%= hidden_field_tag 'external_links[parent_type]', parent_type %>
  <%= hidden_field_tag 'external_links[parent_id]', parent_id %>

  <%= render partial: 'shared/country_home_page/external_links', locals: {
    sub_partial: 'shared/country_home_page/editable_external_link',
    external_links: external_links,
    class_name_for_ul: class_name_for_ul
    }
  %>
